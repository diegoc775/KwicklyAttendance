<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green3"
    tools:context=".ActivityClasses.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/InnerConstraintLayout"
        android:layout_width="346dp"
        android:layout_height="413dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377">

        <EditText
            android:id="@+id/enterEmail"
            android:layout_width="208dp"
            android:layout_height="56dp"
            android:layout_marginTop="176dp"
            android:ems="10"
            android:hint="Email:"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/enterPassword"
            android:layout_width="208dp"
            android:layout_height="56dp"
            android:layout_marginBottom="112dp"
            android:ems="10"
            android:hint="Password:"
            android:inputType="textPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterEmail"
            app:layout_constraintVertical_bias="1.0" />

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="285dp"
            android:layout_height="61dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.947">

            <RadioButton
                android:id="@+id/rBtnStudent"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Student" />

            <RadioButton
                android:id="@+id/rBtnAdmin"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Admin" />

        </RadioGroup>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="334dp"
            android:layout_height="269dp"
            android:background="@drawable/kwikly_attendance_logo_no_background"
            app:layout_constraintBottom_toTopOf="@+id/enterEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.526" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="180dp"
        android:layout_height="54dp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InnerConstraintLayout"
        app:layout_constraintVertical_bias="0.51" />
</androidx.constraintlayout.widget.ConstraintLayout>